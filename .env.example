# Slack credentials
SLACK_APP_TOKEN=xapp-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Triggering keywords (comma-separated, case-insensitive)
KEYWORDS=@help, help me, urgent, projector down, tv not working, classroom issue

# Optional: regex patterns for more complex matching (comma-separated)
KEYWORD_PATTERNS=classroom\s+\d+,room\s+\d+,humanities\s+\d+

# Optional: restrict to specific channels by name or ID (comma-separated)
CHANNEL_ALLOWLIST=customer-requests,it-support
# Optional: exclude channels by name or ID (comma-separated)
CHANNEL_BLOCKLIST=general,random

# Behavior
IGNORE_BOTS=true
SOUND_PATH=/System/Library/Sounds/Submarine.aiff
SOUND_VOLUME=0.7
BUZZ_REPEAT=3
BUZZ_INTERVAL_SECONDS=0.6
SHOW_MAC_NOTIFICATION=true

# Rate limiting (minutes between alerts)
RATE_LIMIT_MINUTES=5

# Statistics tracking
ENABLE_STATS=true
STATS_FILE=alert_stats.json

# Logging
LOG_LEVEL=INFO
